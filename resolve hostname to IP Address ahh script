import socket

def resolve_hostname(hostname):
    try:
        ip_address = socket.gethostbyname(hostname)
        return ip_address
    except socket.gaierror:
        return "Unable to resolve hostname"

def read_hostnames_from_file(file_path):
    with open(file_path, 'r') as file:
        hostnames = file.readlines()
    return [hostname.strip() for hostname in hostnames]

def main():
    file_path = 'hostnames.txt'  # Path to the file containing hostnames
    hostnames = read_hostnames_from_file(file_path)

    for hostname in hostnames:
        ip_address = resolve_hostname(hostname)
        print(f"The IP address of {hostname} is {ip_address}.")

if __name__ == "__main__":
    main()
